@article{ WOS:000334567300024,
Author = {Rimratchada, Supreecha and McLeish, Tom C. B. and Radford, Sheena E. and
   Paci, Emanuele},
Title = {The Role of High-Dimensional Diffusive Search, Stabilization, and
