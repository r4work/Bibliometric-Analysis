@article{ WOS:000487287200003,
Author = {Creamer, Emily and Aiken, Gerald Taylor and van Veelen, Bregje and
   Walker, Gordon and Devine-Wright, Patrick},
Title = {Community renewable energy: What does it do? Walker and Devine-Wright
