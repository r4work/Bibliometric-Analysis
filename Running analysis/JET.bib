@article{ WOS:000499950100005,
Author = {Emelianoff, Cyria and Wernert, Carole},
Title = {Local energy, a political resource: dependencies and insubordination of
   an urban `Stadtwerk' in France (Metz, Lorraine)},
Journal = {LOCAL ENVIRONMENT},
